<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include layout="@layout/title_bar"
        android:id="@+id/include" />

    <ImageView
        android:id="@+id/image_topic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/img3"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:id="@+id/topic_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/image_topic">

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="今日话题：穷游是一种怎样的体验？"
            android:textColor="@color/button"
            android:textSize="15dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/img_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/topic_comment"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_topic_con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="话题内容话题内容？话题内容话题内容话题内容话题内容话题内容话题内容话题内容话题内容"
        android:textColor="@color/grayfont"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/topic_comment"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"/>


    <ScrollView
