<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aa.itravel.activity.SendMessageActivity">
    <include layout="@layout/title_bar"
        android:id="@+id/include"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"/>
    <EditText
        android:id="@+id/msg_editText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/include"
        android:hint="写动态…"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:textColorHint="@color/grayfont"
        android:textColor="@color/blackfont"/>
    <ImageView
        android:id="@+id/msg_addImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/shape_gray_square_bg"
        android:src="@drawable/img_plus"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignBottom="@+id/msg_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/msg_addLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_editText"
        android:layout_marginLeft="10dp"
        android:text="添加地点..."
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/msg_addLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_addLocation"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="添加标签..."
        android:textSize="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/msg_addLog"
        android:layout_marginTop="15dp">
        <CheckBox
            android:id="@+id/radioButton1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="美食"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"/>
        <CheckBox
            android:id="@+id/radioButton2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/radioButton1"
            android:text="住宿"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"/>
        <CheckBox
            android:id="@+id/radioButton3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/radioButton2"
            android:text="购物"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"/>


        <CheckBox
            android:id="@+id/radioButton4"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/radioButton3"
            android:text="自驾"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"/>

        <CheckBox
            android:id="@+id/radioButton5"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/radioButton1"
            android:text="古镇"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <CheckBox
            android:id="@+id/radioButton6"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="山地"
            android:layout_below="@+id/radioButton2"
            android:layout_toRightOf="@+id/radioButton1"
            android:layout_toEndOf="@+id/radioButton1"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <CheckBox
            android:id="@+id/radioButton7"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="邮轮"
            android:layout_below="@+id/radioButton3"
            android:layout_toRightOf="@+id/radioButton2"
            android:layout_toEndOf="@+id/radioButton2"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <CheckBox
            android:id="@+id/radioButton8"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="穷游"
            android:layout_alignBaseline="@+id/radioButton7"
            android:layout_alignBottom="@+id/radioButton7"
            android:layout_toRightOf="@+id/radioButton7"
            android:layout_toEndOf="@+id/radioButton7"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>


        <CheckBox
            android:id="@+id/radioButton9"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_below="@+id/radioButton5"
            android:text="摄影"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <CheckBox
            android:id="@+id/radioButton10"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="国内"
            android:layout_below="@+id/radioButton6"
            android:layout_toRightOf="@+id/radioButton9"
            android:layout_toEndOf="@+id/radioButton9"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <CheckBox
            android:id="@+id/radioButton11"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="国外"
            android:layout_below="@+id/radioButton7"
            android:layout_toRightOf="@+id/radioButton10"
            android:layout_toEndOf="@+id/radioButton10"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <CheckBox
            android:id="@+id/radioButton12"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="情侣"
            android:layout_below="@+id/radioButton8"
            android:layout_toRightOf="@+id/radioButton11"
            android:layout_toEndOf="@+id/radioButton11"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:layout_alignBottom="@+id/radioButton11"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"/>

        <CheckBox
            android:id="@+id/radioButton13"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="其他"
            android:button="@null"
            android:background="@drawable/radio_button_style"
            android:textColor="@color/radiobutton_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/radioButton9"
            android:layout_alignLeft="@+id/radioButton9"
            android:layout_alignStart="@+id/radioButton9"/>
    </RelativeLayout>

</RelativeLayout>
