<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aa.itravel.MainActivity">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">


                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="手机号 "
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_phone"
                    android:background="@drawable/edit_bg"
                    android:drawablePadding="10dp"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:padding="10dp"></EditText>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="验证码 "
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_code"
                    android:background="@drawable/edit_bg"
                    android:drawablePadding="10dp"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="10dp"></EditText>


            </RelativeLayout>



        </LinearLayout>

        <Button
            android:id="@+id/bt_sendcode"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="发送验证码"
            android:textColor="@color/whitefont"
            android:textSize="18sp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignLeft="@+id/bt_resetPwd"
            android:layout_alignStart="@+id/bt_resetPwd"
            android:layout_marginTop="20dp"></Button>

        <Button
            android:id="@+id/bt_resetPwd"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:text="重新设置密码"
            android:textColor="@color/whitefont"
            android:textSize="18sp"
            android:layout_below="@+id/bt_sendcode"
            android:layout_centerHorizontal="true"></Button>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>